{
  "description": "Redirects YouTube URLs to a Firefox extension page",
  "manifest_version": 2,
  "name": "HumaneTube",
  "version": "0.0.3",
  "permissions": [
    "https://*.youtube.com/*",
    "https://youtu.be/*",
    "https://*.googlevideo.com/*",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "applications": {
    "gecko": {
      "id": "@social-focus",
      "strict_min_version": "80.0"
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self';"
}
